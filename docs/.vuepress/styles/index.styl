@import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Open+Sans:wght@400;700&display=swap');

// GENERAL
body
  font-family $secondaryFont

h1, h2, h3, h4, h5, h6
  font-family $primaryFont !important
  font-weight bold

.callout
  margin 1rem 0
  padding 0.1rem 1.5rem
  border-radius 0.4rem
  background-color #255b9f09

  .title
    font-weight bold

.hero
  img
    width 160px
    height auto

  h1
    border none
    padding-bottom 0

#search-form
  line-height inherit

.sidebar-links a.sidebar-link:hover
  background-color #e6ecf1 !important

// SCROLLBAR
@media (min-width: 719px)
  ::-webkit-scrollbar
    max-width 6px
    max-height 12px
  ::-webkit-scrollbar-thumb
    background-color rgba(255, 255, 255, 0.4)
    border-radius 6px
